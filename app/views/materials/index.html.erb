

<h1>合格原料</h1>

<table class="table">
  <thead>
    <tr>
      <th>ID</th>
      <th>原料名稱</th>
      <th>原料成本</th>
      <th>供應商</th>
      <th>運送時間(日)</th>
      <th>訂購數量</th>
      <th>製成品</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @materials.each do |material| %>
      <tr>
       <% if material.quality == 1 %>
        <td><%= material.m_id %></td>
        <td><%= material.m_name %></td>
        <td><%= material.m_cost %></td>
        <td><%= material.supplier %></td>
        <td><%= material.transportation_time %></td>
        <td><%= material.number %></td>
        <td><%= material.result %></td>
        <td><%= link_to '原料明細', material %></td>
       <%end%>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<button type=button class="btn btn-lg btn-default"><%= link_to '生產小泡芙', a_path %></button>
<button type=button class="btn btn-lg btn-default"><%= link_to '生產牛奶', b_path %></button><br><br>
<button type=button class="btn btn-lg btn-default"><%= link_to '生產系統', products_path %></button>
<button type=button class="btn btn-lg btn-default"><%= link_to '原料資料庫', data_path %></button>
<button type=button class="btn btn-lg btn-default"><%= link_to '回首頁', root_path %></button>

